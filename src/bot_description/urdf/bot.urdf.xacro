  <!-- Base Footprint (reference frame) -->
  <link name="base_footprint"/>

  <!-- Main Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.144" ixy="0" ixz="0" iyy="0.857" iyz="0" izz="0.840"/>
    </inertial>

    <collision name="base_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.37 0.37 0.415"/>
      </geometry>
      <surface>
        <contact>
          <collide_without_contact>false</collide_without_contact>
          <ode>
            <min_depth>0.005</min_depth>
            <kp>1e6</kp>
            <kd>100.0</kd>
            <max_vel>0.01</max_vel>
          </ode>
        </contact>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.4</mu2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name="base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box  size="1.37 0.37 0.415"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1"/>
      </material>
    </visual>

  </link>

