  <!-- ═══════════════════════════════════════════════════════════════════
       DESERT SOIL / SAND PHYSICS  (Gemini 3-step fix)
       Tuned for capable off-road UGV on loose Thar Desert sand
         • kp=1e6    → stiff contact spring (prevents sinking on heightmap)
         • kd=100    → stable damping
         • min_depth=0.005 → forces Gazebo to correct wheel before it
                             penetrates ground (the "min_depth hack")
         • mu=0.8    → strong forward bite (aggressive tyres)
         • mu2=0.5   → moderate lateral grip (allows realistic dune skid)
         • fdir1=1 0 0  → primary friction direction along wheel forward
         • maxVel=0.01   → near-zero restitution velocity
         • <surface> blocks also added inline in wheel <collision> elements
           for belt-and-suspenders collision resolution
       ═══════════════════════════════════════════════════════════════════ -->

  <!-- Front wheels, sandy terrain physics -->
  <gazebo reference="base_front_left_wheel">
    <mu1>0.8</mu1>
    <mu2>0.5</mu2>
    <kp>1e6</kp>
    <kd>100.0</kd>
    <slip1>0.012</slip1>
    <slip2>0.018</slip2>
    <minDepth>0.005</minDepth>
    <maxVel>0.01</maxVel>
    <fdir1>1 0 0</fdir1>
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="base_front_right_wheel">
